<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Summoners</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @summoners.each do |summoner| %>
        <tr>
          <td><%= summoner.name %></td>
          <td><%= link_to 'Show', summoner %></td>
          <td><%= link_to 'Edit', edit_summoner_path(summoner) %></td>
          <td><%= link_to 'Destroy', summoner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Summoner', new_summoner_path %>

</div>
